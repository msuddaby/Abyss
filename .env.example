# ===========================================
# Abyss - Production Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# For development, see .env.dev.example instead.
# ===========================================

# ---- Database ----
# In production (docker compose), the API connects to the 'db' service internally.
# No host port is exposed â€” only containers can reach Postgres.
POSTGRES_USER=abyss
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_RANDOM_PASSWORD
POSTGRES_DB=abyss
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ---- JWT ----
# Generate a strong key: openssl rand -base64 48
JWT_KEY=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING
JWT_ISSUER=Abyss
JWT_AUDIENCE=Abyss

# ---- CORS (comma-separated) ----
CORS_ORIGINS=https://your.domain.com

# ---- TURN / STUN ----
TURN_EXTERNAL_IP=YOUR_PUBLIC_IP
TURN_PORT=3478
TURN_USER=abyss
TURN_CREDENTIAL=CHANGE_ME_TO_A_STRONG_PASSWORD
TURN_REALM=abyss

# ---- Frontend (VITE_ prefix required by Vite) ----
VITE_API_URL=https://your.domain.com
VITE_STUN_URL=stun:stun.l.google.com:19302
VITE_TURN_URLS=turn:YOUR_PUBLIC_IP:3478,turn:YOUR_PUBLIC_IP:3478?transport=tcp
VITE_TURN_USERNAME=abyss
VITE_TURN_CREDENTIAL=CHANGE_ME_TO_A_STRONG_PASSWORD
